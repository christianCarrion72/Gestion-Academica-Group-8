<odoo>
    <data>
      <!-- Vista de Lista (Tree) -->
      <record model="ir.ui.view" id="gestion_academica.paralelo_tree" >
        <field name="name">gestion.academica paralelo tree</field>
        <field name="model">gestion_academica.paralelo</field>
        <field name="arch" type="xml">
          <tree>
            <field name="descripcion"/>
          </tree>
        </field>
      </record>
  
      <!-- Vista de Formulario (Form) -->
      <record id="view_paralelo_form" model="ir.ui.view">
        <field name="name">gestion.academica paralelo form</field>
        <field name="model">gestion_academica.paralelo</field>
        <field name="arch" type="xml">
          <form>
            <sheet>
              <group>
                <field name="descripcion"/>
              </group>
            </sheet>
          </form>
        </field>
      </record>
    </data>
</odoo>